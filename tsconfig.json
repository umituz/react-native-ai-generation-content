{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["ESNext", "DOM"],
    "jsx": "react-native",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowImportingTsExtensions": true,
    "baseUrl": ".",
    "paths": {
      "@ai-generation/content-moderation": ["./src/domains/content-moderation"],
      "@ai-generation/content-moderation/*": ["./src/domains/content-moderation/*"],
      "@ai-generation/creations": ["./src/domains/creations"],
      "@ai-generation/creations/*": ["./src/domains/creations/*"],
      "@ai-generation/face-detection": ["./src/domains/face-detection"],
      "@ai-generation/face-detection/*": ["./src/domains/face-detection/*"],
      "@ai-generation/feature-background": ["./src/domains/feature-background"],
      "@ai-generation/feature-background/*": ["./src/domains/feature-background/*"],
      "@ai-generation/scenarios": ["./src/domains/scenarios"],
      "@ai-generation/scenarios/*": ["./src/domains/scenarios/*"],
      "@ai-generation/generation": ["./src/domains/generation"],
      "@ai-generation/generation/*": ["./src/domains/generation/*"],
      "@ai-generation/result-preview": ["./src/domains/result-preview"],
      "@ai-generation/result-preview/*": ["./src/domains/result-preview/*"],
      "@ai-generation/access-control": ["./src/domains/access-control"],
      "@ai-generation/access-control/*": ["./src/domains/access-control/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.d.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/node_modules/**"
  ]
}