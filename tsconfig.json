{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ESNext"],
    "jsx": "react-native",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@ai-generation/prompts": ["./src/domains/prompts"],
      "@ai-generation/prompts/*": ["./src/domains/prompts/*"],
      "@ai-generation/content-moderation": ["./src/domains/content-moderation"],
      "@ai-generation/content-moderation/*": ["./src/domains/content-moderation/*"],
      "@ai-generation/creations": ["./src/domains/creations"],
      "@ai-generation/creations/*": ["./src/domains/creations/*"],
      "@ai-generation/face-detection": ["./src/domains/face-detection"],
      "@ai-generation/face-detection/*": ["./src/domains/face-detection/*"],
      "@ai-generation/feature-background": ["./src/domains/feature-background"],
      "@ai-generation/feature-background/*": ["./src/domains/feature-background/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.d.ts"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.test.tsx", "**/node_modules/**"]
}